<div class="flex-center">
    <div class="row" id="tab-wrapper">
        <div class="col s6 offset-s3"><h1 class="center-align">Hello World</h1></div>
        <div class="col s6 offset-s3">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login_form" class="active">Login</a></li>
                <li class="tab col s6"><a href="#signup_form">Signup</a></li>
            </ul>
        </div>
        <div id="login_form" class="col s6 offset-s3">
            <form action="/login" method="POST">
                <div class="row">
                    <div class="col s12"><h2 class="center-align">Login</h2></div>
                    <div class="input-field col s12">
                        <input id="login_email" name="email" type="email" class="validate">
                        <label for="login_email">Email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="login_password" name="password" type="password" class="validate">
                        <label for="login_password">Password</label>
                    </div>
                </div>
                <p class="center-align"><button class="btn waves-effect waves-light " type="submit">login</button></p>
            </form>
        </div>
        <div id="signup_form" class="col s6 offset-s3">
            <form action="/signup" method="POST">
                <div class="row">
                    <div class="col s12"><h2 class="center-align">Signup</h2></div>
                    <div class="input-field col s12">
                        <input id="signup_email" name="email" type="email" class="validate">
                        <label for="signup_email">Email</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="signup_password" name="password" type="password" class="validate">
                        <label for="signup_password">Password</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="confirm_password" name="confirm_password" type="password" class="validate">
                        <label for="confirm_password">Confirm Password</label>
                    </div>
                </div>
                <p class="center-align"><button class="btn waves-effect waves-light " type="submit">Signup</button></p>
            </form>
        </div>
    </div><!--End of Row-->
</div>

