<%if @orders.count > 0 %>
    <ul class="collection with-header">
        <li class="collection-header"><h4>Orders</h4></li>
        <% @orders.each do |order| %>
            <a class="collection-item" href="/orders/<%=order.id%>">
                <div class="row">
                    <div class="col s6"><span class="bold"> <%= order.num %> </span> <span> <%= order.product.name %></span> </div>
                    <div class="col s6"><span class="bold right-align"><%= order.status.capitalize %></span>
                </div>
            </a>
        <% end %>
    </ul>
    

<% else %>
    <h4> No Orders Yet! </h4>
    <br>
    <div class="row">
        <div class="col s12"><p class="center-align"><a href="/orders/new">Create New Order</a></p></div>
    </div>
<% end %>
