<%if @orders.count > 0 %>
    <ul class="collection with-header">
        <li class="collection-header"><h4>Orders</h4></li>
        <% @orders.each do |order| %>
            <li class="collection-item">
                <div>
                    <a href="/orders/<%=order.id%>"><span class="bold"> <%= order.order_num %></span> <span> <%= order.product.name %></span></a>
                    <span class="bold secondary-content"><%= status(order) %></span>
                </div>
            </a></li>
        <% end %>
    </ul>
    

<% else %>
    <h4> No Orders Yet! </h4>
    <br>
    <div class="row">
        <div class="col s12"><p class="center-align"><a href="/orders/new">Create New Order</a></p></div>
    </div>
<% end %>
